{
  "name": "@hmcts/zephyr-automation-nodejs",
  "type": "module",
  "version": "0.0.1",
  "license": "MIT",
  "description": "Node.js library for Zephyr automation in HMCTS projects",
  "repository": {
    "type": "git",
    "url": "https://github.com/hmcts/zephyr-automation-nodejs"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "yarn clean && tsc",
    "clean": "rm -rf dist",
    "lint": "eslint ./src --ext .ts && yarn prettier",
    "prettier": "prettier --check \"./src/**/*.{ts,js,json}\"",
    "prettier:fix": "prettier --write \"./src/**/*.{ts,js,json}\"",
    "pack:local": "yarn build && npm pack",
    "prepack": "yarn build",
    "audit:save": "yarn audit --recursive --environment production --json > yarn-known-issues || true",
    "audit:check": "yarn audit --recursive --environment production --json > yarn-known-issues-current || true && jq -s '[.[] | select(.type==\"auditAdvisory\") | .data.advisory.id] | sort' yarn-known-issues-current > current-ids.json && jq -s '[.[] | select(.type==\"auditAdvisory\") | .data.advisory.id] | sort' yarn-known-issues > known-ids.json && diff -q known-ids.json current-ids.json || (echo '‚ùå New vulnerabilities detected. Please review.' && exit 1)"
  },
  "dependencies": {
    "@hmcts/nodejs-logging": "^4.0.4"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.3.0",
    "cypress": "^15.0.0",
    "mocha": "^11.7.5",
    "typescript": "^5.9.3"
  },
  "packageManager": "yarn@4.12.0",
  "files": [
    "dist",
    "README.md",
    "cjs"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./cypress": {
      "import": "./dist/cypress/index.js",
      "require": "./dist/cypress/index.js",
      "types": "./dist/cypress/index.d.ts",
      "default": "./dist/cypress/index.js"
    },
    "./cypress/ZephyrReporter": {
      "import": "./dist/cypress/ZephyrReporter.js",
      "require": "./cjs/ZephyrReporter.cjs",
      "types": "./dist/cypress/ZephyrReporter.d.ts",
      "default": "./dist/cypress/ZephyrReporter.js"
    }
  }
}
